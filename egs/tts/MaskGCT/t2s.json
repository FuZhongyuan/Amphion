{
    "model_type": "T2S",
    "dataset": {
        "libritts": 1.0
    },
    "preprocess": {
        "dataset_type": "ljspeech",
        "ljspeech_data_root": "data/LJSpeech-1.1",
        "ljspeech_cache_path": "data/LJSpeechCache",
        "hop_size": 320,
        "sample_rate": 16000,
        "max_length": 128000,
        "random_crop": true,
        "processed_dir": "data/processed_maskgct/ljspeech",
        "valid_file": "valid.json",
        "train_file": "train.json",
        "load_phone": true,
        "load_semantic_features": true,
        "load_mel_spectrogram": false,
        "use_semantic_cache": true
    },
    "model": {
        "t2s_model": {
            "hidden_size": 1536,
            "num_layers": 16,
            "num_heads": 16,
            "cfg_scale": 0.15,
            "cond_codebook_size": 8192,
            "cond_dim": 1024,
            "use_phone_cond": true,
            "gradient_checkpointing": true
        },
        "semantic_codec": {
            "codebook_size": 8192,
            "hidden_size": 1024,
            "codebook_dim": 8,
            "vocos_dim": 384,
            "vocos_intermediate_dim": 2048,
            "vocos_num_layers": 12,
            "pretrained_path": "ckpts/MaskGCT-ckpt/semantic_codec/model.safetensors",
            "representation_stat_mean_var_path": "models/tts/maskgct/ckpt/wav2vec2bert_stats.pt"
        },
        "representation_type": "w2v-bert-2.0",
        "representation_sample_rate": 16000,
        "use_norm_feat": true
    },
    "log_dir": "ckpts/maskgct",
    "train": {
        "max_epoch": 0,
        "use_dynamic_batchsize": true,
        "max_tokens": 16000000,
        "max_sentences": 200,
        "lr_warmup_steps": 5000,
        "lr_scheduler": "inverse_sqrt",
        "num_train_steps": 100000,
        "adam": {
            "lr": 1e-4,
            "betas": [0.5, 0.9]
        },
        "ddp": false,
        "random_seed": 114,
        "batch_size": 32,
        "epochs": 5000,
        "max_steps": 1000000,
        "total_training_steps": 800000,
        "save_summary_steps": 500,
        "save_checkpoints_steps": 2000,
        "valid_interval": 2000,
        "keep_checkpoint_max": 100,
        "gradient_accumulation_step": 1,
        "tracker": ["tensorboard"],
        "save_checkpoint_stride": [1],
        "keep_last": [5],
        "run_eval": [true],
        "dataloader": {
            "num_worker": 8,
            "pin_memory": true,
            "prefetch_factor": 4
        }
    }
}

