{
    "model_type": "SemanticCodec",
    "dataset": {
        "libritts": 1.0
    },
    "preprocess": {
        "dataset_type": "libritts",
        "libritts_data_root": "data/LibriTTS",
        "libritts_cache_path": "data/LibriTTSCache",
        "hop_size": 320,
        "sample_rate": 16000,
        "max_length": 128000,
        "min_dur": 3,
        "max_dur": 30,
        "random_crop": true,
        "processed_dir": "data/processed_maskgct/libritts",
        "valid_file": "valid.json",
        "train_file": "train.json",
        "load_semantic_features": true,
        "load_mel_spectrogram": false,
        "use_semantic_cache": true
    },
    "model": {
        "semantic_codec": {
            "codebook_size": 512,
            "hidden_size": 1024, // 这个与w2v-bert-2.0 模型的输出特征维度保持一致
            "codebook_dim": 8,
            "vocos_dim": 384,
            "vocos_intermediate_dim": 2048,
            "vocos_num_layers": 12,
            "rec_loss_weight": 32.0 // 小 → 更偏向语义一致性
        },
        "representation_type": "w2v-bert-2.0",
        "representation_sample_rate": 16000,
        "use_norm_feat": true,
        "representation_stat_mean_var_path": "models/tts/maskgct/ckpt/wav2vec2bert_stats.pt"
    },
    "log_dir": "ckpts/maskgct_mini",
    "train": {
        "max_epoch": 0,
        "use_dynamic_batchsize": true,
        "max_tokens": 25000,
        "max_sentences": 100,
        "lr_warmup_steps": 5000,
        "lr_scheduler": "inverse_sqrt",
        "num_train_steps": 50000,
        "adam": {
            "lr": 5e-5,
            "betas": [0.5, 0.9],
            "weight_decay": 1.0e-4
        },
        "ddp": false,
        "random_seed": 114,
        "batch_size": 32,  // each GPU
        "epochs": 5000, // not used
        "max_steps": 50000,
        "total_training_steps": 100000,
        "save_summary_steps": 500,
        "save_checkpoints_steps": 2000,
        "valid_interval": 2000,
        "keep_checkpoint_max": 50,
        "gradient_accumulation_step": 1,
        "tracker": ["tensorboard"],
        "save_checkpoint_stride": [1],
        "keep_last": [5],
        "run_eval": [true],
        "dataloader": {
            "num_worker": 16,
            "pin_memory": true,
            "prefetch_factor": 4
        }
    }
}
