{
    "model_type": "AcousticCodec",
    "dataset": {
        "libritts": 1.0
    },
    "preprocess": {
        "dataset_type": "libritts",
        "libritts_data_root": "data/LibriTTS",
        "libritts_cache_path": "data/LibriTTSCache",
        "hop_size": 320,
        "sample_rate": 24000,
        // "max_length": 96000, // not use
        "random_crop": true,
        "processed_dir": "",
        "valid_file": "valid.json",
        "train_file": "train.json",
        "min_dur": 3,
        "max_dur": 30
    },
    "model": {
        "acoustic_codec": {
            "encoder": {
                "d_model": 64,
                "up_ratios": [3, 4, 5, 8],
                "out_channels": 192,
                "use_tanh": false
            },
            "decoder": {
                "in_channels": 192,
                "upsample_initial_channel": 1024,
                "up_ratios": [8, 5, 4, 3],
                "num_quantizers": 6,
                "codebook_size": 256,
                "codebook_dim": 8,
                "quantizer_type": "fvq",
                "quantizer_dropout": 0.5,
                "commitment": 0.25,
                "codebook_loss_weight": 1.0,
                "use_l2_normlize": true,
                "codebook_type": "euclidean",
                "kmeans_init": false,
                "kmeans_iters": 10,
                "decay": 0.8,
                "eps": 0.5,
                "threshold_ema_dead_code": 2,
                "weight_init": false,
                "use_vocos": true,
                "vocos_dim": 256,
                "vocos_intermediate_dim": 2048,
                "vocos_num_layers": 20,
                "n_fft": 1920,
                "hop_size": 480,
                "padding": "same",
                "rec_loss_weight": 1.0
            }
        }
    },
    "log_dir": "ckpts/maskgct_mini",
    "train": {
        "max_epoch": 0,
        "use_dynamic_batchsize": false,
        "max_tokens": 16000000,
        "max_sentences": 200,
        "lr_warmup_steps": 10000,
        "lr_scheduler": "constant",
        "num_train_steps": 100000,
        "adam": {
            "lr": 1e-4,
            "betas": [0.5, 0.9]
        },
        "ddp": false,
        "random_seed": 114,
        "batch_size": 2,
        "epochs": 5000,
        "max_steps": 500000,
        "total_training_steps": 400000,
        "save_summary_steps": 500,
        "save_checkpoints_steps": 2000,
        "valid_interval": 2000,
        "keep_checkpoint_max": 100,
        "gradient_accumulation_step": 16,
        "tracker": ["tensorboard"],
        "save_checkpoint_stride": [1],
        "keep_last": [5],
        "run_eval": [true],
        "dataloader": {
            "num_worker": 2,
            "pin_memory": false
        }
    }
}
