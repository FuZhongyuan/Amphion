{
    "model_type": "T2S_Curriculum",
    "dataset": {
        "libritts": 1.0
    },
    "preprocess": {
        "dataset_type": "libritts",
        "libritts_data_root": "data/LibriTTS",
        "libritts_cache_path": "data/LibriTTSCache",
        "hop_size": 320,
        "sample_rate": 16000,
        "max_length": 128000,
        "min_dur": 0,
        "max_dur": 50,
        "random_crop": true,
        "processed_dir": "data/processed_maskgct/libritts",
        "valid_file": "valid.json",
        "train_file": "train.json",
        "load_phone": true,
        "load_semantic_features": true,
        "load_mel_spectrogram": false,
        "use_semantic_cache": true
    },
    "model": {
        "t2s_model": {
            "hidden_size": 768,
            "num_layers": 12,
            "num_heads": 12,
            "cfg_scale": 0.15,
            "cond_codebook_size": 512,
            "cond_dim": 256,
            "use_phone_cond": true,
            "gradient_checkpointing": true,
            "total_steps": 100000, //not max_step,because max_epoch is inf
            "stage1_steps": 0.3, //stage1_steps * total_steps
            "stage2_steps": 0.7,
            "min_mask_ratio": 0.1,
            "max_mask_ratio": 0.8
        },
        "semantic_codec": {
            "codebook_size": 512,
            "hidden_size": 1024,
            "codebook_dim": 8,
            "vocos_dim": 384,
            "vocos_intermediate_dim": 2048,
            "vocos_num_layers": 12,
            "pretrained_path": "ckpts/maskgct_mini/semantic_codec_mini_150k/checkpoint/epoch-0060_step-0150000_loss-44.534714/pytorch_model.bin",
            "representation_stat_mean_var_path": "models/tts/maskgct/ckpt/wav2vec2bert_stats.pt"
        },
        "representation_type": "w2v-bert-2.0",
        "representation_sample_rate": 16000,
        "use_norm_feat": true
    },
    "log_dir": "ckpts/maskgct_mini",
    "train": {
        "max_epoch": 0,
        "use_dynamic_batchsize": true,
        "max_tokens": 15000,
        "max_sentences": 50,
        "lr_warmup_steps": 5000,
        "lr_scheduler": "inverse_sqrt",
        "num_train_steps": 100000,
        "adam": {
            "lr": 5e-4,
            "betas": [0.9, 0.9],
            "weight_decay": 1.0e-4
        },
        "ddp": false,
        "random_seed": 114,
        "batch_size": 48,
        "epochs": 5000,
        "max_steps": 100000,
        "total_training_steps": 100000,
        "save_summary_steps": 500,
        "save_checkpoints_steps": 2000,
        "valid_interval": 2000,
        "keep_checkpoint_max": 50,
        "gradient_accumulation_step": 1,
        "tracker": ["tensorboard"],
        "save_checkpoint_stride": [1],
        "keep_last": [5],
        "run_eval": [true],
        "dataloader": {
            "num_worker": 16,
            "pin_memory": true,
            "prefetch_factor": 4
        }
    }
