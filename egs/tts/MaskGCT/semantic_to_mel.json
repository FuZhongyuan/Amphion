{
    "model_type": "SemanticToMel",
    "dataset": {
        "ljspeech": 1.0
    },
    "preprocess": {
        "dataset_type": "ljspeech",
        "ljspeech_data_root": "data/LJSpeech-1.1",
        "ljspeech_cache_path": "data/LJSpeechCache",
        "hop_size": 320,
        "sample_rate": 16000,
        "n_fft": 1024,
        "win_size": 1024,
        "n_mel": 80,
        "fmin": 0,
        "fmax": 8000,
        "max_length": 160000,
        "random_crop": true,
        "processed_dir": "data/processed_maskgct/ljspeech",
        "valid_file": "valid.json",
        "train_file": "train.json",
        "load_semantic_features": true,
        "load_mel_spectrogram": true,
        "use_semantic_cache": true
    },
    "model": {
        "semantic_to_mel": {
            "hidden_size": 1024,
            "num_layers": 16,
            "num_heads": 16,
            "n_mel": 80,
            "semantic_codebook_size": 8192,
            "cfg_scale": 0.15,
            "use_acoustic_prompt": true,
            "acoustic_encoder_layers": 6,
            "mel_proj_layers": 3,
            "use_prompt": false,
            "gradient_checkpointing": true
        },
        "semantic_codec": {
            "codebook_size": 8192,
            "hidden_size": 1024,
            "codebook_dim": 8,
            "vocos_dim": 256,
            "vocos_intermediate_dim": 1024,
            "vocos_num_layers": 8,
            "pretrained_path": "ckpts/maskgct/semantic_codec/checkpoint/epoch-XXXX_step-XXXXXXX_loss-X.XXXXXX",
            "representation_stat_mean_var_path": "models/tts/maskgct/ckpt/wav2vec2bert_stats.pt"
        },
        "representation_type": "w2v-bert-2.0",
        "representation_sample_rate": 16000,
        "use_norm_feat": true
    },
    "log_dir": "ckpts/maskgct",
    "train": {
        "max_epoch": 0,
        "use_dynamic_batchsize": true,
        "max_tokens": 16000000,
        "max_sentences": 32,
        "lr_warmup_steps": 10000,
        "lr_scheduler": "inverse_sqrt",
        "num_train_steps": 500000,
        "adam": {
            "lr": 5e-5,
            "betas": [0.9, 0.98],
            "weight_decay": 0.01
        },
        "ddp": true,
        "random_seed": 114,
        "batch_size": 16,
        "epochs": 5000,
        "max_steps": 1000000,
        "total_training_steps": 500000,
        "save_summary_steps": 500,
        "save_checkpoints_steps": 5000,
        "valid_interval": 5000,
        "keep_checkpoint_max": 20,
        "gradient_accumulation_step": 2,
        "tracker": ["tensorboard"],
        "save_checkpoint_stride": [1],
        "keep_last": [10],
        "run_eval": [true],
        "dataloader": {
            "num_worker": 8,
            "pin_memory": true,
            "non_blocking": true,
            "prefetch_factor": 4
        }
    }
}
