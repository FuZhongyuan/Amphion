{
    "datasets": {
        "ljspeech": {
            "data_root": "data/LJSpeech-1.1",
            "processed_dir": "data/processed_maskgct/ljspeech",
            "sample_rate": 16000,
            "max_workers": 8
        },
        "libritts": {
            "data_root": "data/LibriTTS",
            "processed_dir": "data/processed_maskgct/libritts",
            "sample_rate": 16000,
            "max_workers": 8
        }
    },
    "semantic_model": {
        "model_name": "facebook/w2v-bert-2.0",
        "feature_extractor": "SeamlessM4TFeatureExtractor",
        "output_layer": 17,
        "extract_hidden_states": true
    },
    "preprocessing": {
        "batch_size": 1,
        "save_format": "npy",
        "overwrite_existing": false,
        "extract_mel": true,
        "mel_config": {
            "sample_rate": 16000,
            "n_fft": 1024,
            "hop_size": 320,
            "win_size": 1024,
            "n_mel": 80,
            "fmin": 0,
            "fmax": 8000
        }
    }
}
