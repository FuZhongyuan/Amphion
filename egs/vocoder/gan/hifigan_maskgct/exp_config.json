{
    "base_config": "config/vocoder.json",
    "model_type": "GANVocoder",
    "dataset": [
        "libritts"
    ],
    "dataset_path": {
        "libritts": "data/LibriTTS"
    },
    "log_dir": "ckpts/vocoder/hifigan_maskgct",
    "preprocess": {
        "extract_mel": true,
        "extract_audio": true,
        "extract_pitch": false,
        "extract_uv": false,
        "pitch_extractor": "parselmouth",

        "use_mel": true,
        "use_frame_pitch": false,
        "use_uv": false,
        "use_audio": true,
        "use_hdf5": true,

        "processed_dir": "data/processed_vocoder/hifigan_maskgct",

        "sample_rate": 16000,
        "n_fft": 1024,
        "hop_size": 320,
        "win_size": 1024,
        "n_mel": 80,
        "fmin": 0,
        "fmax": 8000,

        "samples_per_hdf5": 20000,
        "use_float16": false,
        "hdf5_compression": "gzip",
        "hdf5_compression_opts": 4,
        "hdf5_cache_size": 20,
        "overwrite_existing": false,

        "min_level_db": -115,
        "ref_level_db": 20
    },
    "model": {
        "generator": "hifigan",
        "hifigan": {
            "resblock": "1",
            "upsample_rates": [10, 8, 2, 2],
            "upsample_kernel_sizes": [20, 16, 4, 4],
            "upsample_initial_channel": 512,
            "resblock_kernel_sizes": [3, 7, 11],
            "resblock_dilation_sizes": [[1, 3, 5], [1, 3, 5], [1, 3, 5]]
        },
        "discriminators": [
            "msd",
            "mpd"
        ],
        "mpd": {
            "mpd_reshapes": [2, 3, 5, 7, 11],
            "use_spectral_norm": false,
            "discriminator_channel_mult_factor": 1
        },
        "msd": {
            "use_spectral_norm": false
        }
    },
    "train": {
        "criterions": [
            "feature",
            "discriminator",
            "generator",
            "mel"
        ],
        "batch_size": 32,
        "max_epoch": 1000000,
        "save_checkpoint_stride": [50],
        "keep_last": [5],
        "run_eval": [true],
        "adamw": {
            "lr": 2.0e-4,
            "adam_b1": 0.8,
            "adam_b2": 0.99
        },
        "exponential_lr": {
            "lr_decay": 0.999
        },
        "dataloader": {
            "num_worker": 8,
            "pin_memory": true
        }
    }
}
